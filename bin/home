#!/bin/sh
#
# copy home directory files to the named machine

host="${1}"

if [ -n "${host}" ]; then
    
    # base files
    SKELETON="${HOME}/Projects/homedir"
    
    # make sure the skeleton is up-to-date
    cd ${SKELETON} 
    git pull
    
    # copy everything else
    rsync -aHvP --exclude .git/ . ${host}:.

else
    echo "Usage: home <host>"
    exit 1
fi
