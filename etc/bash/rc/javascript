# ~/etc/bash/rc/javascript
#
# Javascript specific settings

js_engine="java -jar ~/bin/js.jar"

[ "${hostos}" == "Darwin" ] && js_engine="~/bin/d8-osx"

alias          js="${js_engine}"
alias      jslint="${js_engine} ~/bin/jslint.js"
alias  jsbeautify="java -jar ~/bin/js.jar ~/bin/beautify-cl.js -d ~/bin/" # needs Rhino
alias yuicompress="java -jar ~/bin/yuicompressor-2.4.2.jar"
