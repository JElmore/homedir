# ~/etc/bash/rc/ruby
# 
# Ruby specific settings

export RI="--format bs"
export RUBYOPT=rubygems

if [ "`gem list | grep hanna`" ]; then
  export RDOCOPT="-S -f html -T hanna"
else
  export RDOCOPT="-S -f html"
fi

if [[ -s "$HOME/.rvm" ]]; then
  [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
  rvm ruby-1.9.2
fi
